<body>
        <div class="page-header">
                <h1 class="text-center">TODOLIST</h1>
              </div>
    <!-- <h1>TODOLIST</h1> -->
    {{!-- <form id="taskform" action="/" method="POST"> --}}
    <form id="taskform">
        <div class="form-group m-3">
          <label class="m-3" for="task"><h3>New Task</h3></label>
          <input type="text" class="form-control col-md-4 m-3" name="task" id="task"  placeholder="Add the new task here.">
           </div>
       <button type="submit" class="btn btn-primary  m-4">Submit</button>
      </form>

    <br><br><br>
    <table class="table table-striped table-dark col-md-6 m-auto">
            <thead>
              <tr>
                <th scope="col m-auto">#</th>
                <th scope="col m-auto">Task</th>
                <th scope="col m-auto">Striked</th>
                <!-- <th scope="col">Handle</th> -->
              </tr>
            </thead>
            <tbody id="taskrow">
              {{!-- <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>false</td>
                </tr>
              <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>false</td>
                </tr>
              <tr>
                <th scope="row">3</th>
                <td>Larry</td>
                <td>false</td>
                </tr> --}}
                {{#each tasks as |t| }}
                <tr>
                  <th scope="row">{{@index}}</th>
                  <td>{{t.title}}</td>
                  <td>false</td>
                </tr>
                {{/each}}
            </tbody>
          </table>
</body>
</html>